# Environment Variables for Veeran Youth League Website

# Application
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3001

# Web3Forms API (for contact form)
WEB3FORMS_API_KEY=your_web3forms_api_key_here

# R2 Cloudflare Storage
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_r2_bucket_name

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Admin Authentication (for development only - use proper auth in production)
NEXT_PUBLIC_ADMIN_EMAIL=admin@vylleague.com
NEXT_PUBLIC_ADMIN_PASSWORD=VYL@admin2025!

# Security
NEXTAUTH_SECRET=generate_a_strong_random_secret_here
NEXTAUTH_URL=http://localhost:3001

# Sanity CMS (when ready to integrate)
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your_api_token